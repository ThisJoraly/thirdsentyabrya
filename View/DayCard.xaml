<UserControl x:Class="thirdsentyabrya.View.DayCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:thirdsentyabrya.View"
             mc:Ignorable="d" 
             Height="50" Width="50">
    <Grid Margin="5" Background="Gray">
        <TextBlock Text="{Binding Day}"  HorizontalAlignment="Center" VerticalAlignment="Center"/>
    </Grid>
</UserControl>
